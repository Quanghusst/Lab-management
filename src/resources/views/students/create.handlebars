{{> header}}
<div class="container content-body">
    <h2 style="margin-bottom: 24px;">Thêm sinh viên</h2>
    <form method="POST"  action="/students/saved" enctype="multipart/form-data">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="inputEmail4">Họ và tên</label>
                <input name="name" id="name" type="text" class="form-control" required>
            </div>
            <div class="form-group col-md-6">
                <label for="inputEmail4">Email</label>
                <input name="email" id="email" type="email" class="form-control" required>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="inputEmail4">Mã sinh viên</label>
                <input name="mssv" id="mssv" type="text" class="form-control" required>
            </div>
            <div class="form-group col-md-6">
                <label for="inputEmail4">ID nhóm</label>
                <input name="labGroupId" id="labGroupId" type="text" class="form-control" required>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="inputEmail4">Số điện thoại</label>
                <input name="phoneNumber" id="phoneNumber" type="text" class="form-control" required>
            </div>
            <div class="form-group col-md-6">
                <label for="inputEmail4">Mô tả</label>
                <textarea name="description" id="description" type="email" class="form-control"></textarea>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="image">Ảnh</label>
                <input name="image" id="image" type="file" class="form-control">
            </div>
            <div class="form-group col-md-6">
                <label for="inputEmail4">isAdmin(0/1) </label>
                <input name="isAdmin" id="isAdmin" type="text" class="form-control" required>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Thêm</button>
    </form>
</div>
